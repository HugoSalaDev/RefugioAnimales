@model RefugioAnimales.Models.Adoptante
@{
    ViewData["Title"] = "Eliminar";
}

<style>
    .delete-box {
        max-width: 500px;
        margin: 40px auto;
        background: #fff5f5;
        border: 1px solid #feb2b2;
        padding: 30px;
        border-radius: 8px;
        text-align: center;
    }

    .btn-delete {
        background-color: #c53030;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }
</style>

<div class="delete-box">
    <h2 style="color: #c53030;">¿Eliminar Adoptante?</h2>
    <p>Estás a punto de eliminar a <strong>@Model.Nombre</strong>.</p>
    <p style="color: #666; font-size: 0.9em;">Esta acción no se puede deshacer.</p>

    <form asp-action="Eliminar">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Confirmar Eliminación" class="btn-delete" />
        <a asp-action="Index" style="display: block; margin-top: 15px; color: #666;">Cancelar</a>
    </form>
</div>