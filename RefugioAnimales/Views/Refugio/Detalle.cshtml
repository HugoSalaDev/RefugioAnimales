@model RefugioAnimales.Models.Animal

@{
    ViewData["Title"] = Model.Nombre;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <style>
        /* Fondo gris suave */
        body {
            background-color: #f5f5f5;
            padding: 40px 20px;
        }

        /* Contenedor principal */
        .container {
            max-width: 800px;
            margin: 0 auto;
        }

        /* Enlace para volver al listado */
        .back-link {
            display: inline-block;
            color: #4a5568;
            text-decoration: none;
            margin-bottom: 24px;
            font-size: 0.9em;
        }

            .back-link:hover {
                color: #2d3748;
            }

        /* Tarjeta principal con toda la información */
        .card {
            background: white;
            padding: 40px;
            border-radius: 4px;
        }

        /* Título con el nombre del animal */
        h1 {
            font-size: 2em;
            color: #333;
            margin-bottom: 24px;
            font-weight: 500;
        }

        /* Grid de dos columnas: imagen e información */
        .content {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 40px;
        }

        /* Imagen del animal */
        .image {
            width: 100%;
            height: 300px;
            object-fit: cover;
            border-radius: 4px;
            background-color: #e5e5e5;
        }

        /* Cada item de información */
        .info-item {
            margin-bottom: 16px;
        }

        /* Etiqueta de cada campo (Especie, Edad, etc.) */
        .label {
            font-weight: 500;
            color: #333;
            font-size: 0.9em;
            display: block;
            margin-bottom: 4px;
        }

        /* Valor de cada campo */
        .value {
            color: #666;
        }

        /* Badge del estado */
        .estado {
            display: inline-block;
            padding: 6px 12px;
            border-radius: 3px;
            font-size: 0.9em;
        }

        /* Colores según el estado */
        .adoptable {
            background-color: #e6f4ea;
            color: #1e7e34;
        }

        .reservado {
            background-color: #fff4e6;
            color: #c87000;
        }

        .tratamiento {
            background-color: #fce8e6;
            color: #c5221f;
        }

        /* Caja con la descripción */
        .description {
            background-color: #f9f9f9;
            padding: 16px;
            border-radius: 4px;
            margin-top: 16px;
        }

        /* En móviles, una sola columna */
        @@media (max-width: 768px) {
            .content {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Botón para volver al listado -->
        <a asp-controller="Refugio" asp-action="Animales" class="back-link">← Volver al listado</a>

        <div class="card">
            <h1>@Model.Nombre</h1>

            <div class="content">
                <!-- Columna 1: Imagen desde BD -->
                <div>
                    <img src="@Url.Action("ObtenerImagen", "Refugio", new { id = Model.Id })"
                         alt="@Model.Nombre"
                         class="image"
                         onerror="this.src='https://via.placeholder.com/400x300/e5e5e5/999?text=Sin+imagen'">
                </div>

                <!-- Columna 2: Información -->
                <div>
                    <div class="info-item">
                        <span class="label">Especie</span>
                        <span class="value">@Model.Especie</span>
                    </div>

                    <div class="info-item">
                        <span class="label">Edad</span>
                        <span class="value">@Model.Edad año(s)</span>
                    </div>

                    <div class="info-item">
                        <span class="label">Estado</span>
                        <br />
                        <!-- Muestro el badge con el color correspondiente -->
                        @if (Model.Estado == "Disponible")
                        {
                            <span class="estado adoptable">@Model.Estado</span>
                        }
                        else if (Model.Estado == "Adoptado")
                        {
                            <span class="estado reservado">@Model.Estado</span>
                        }
                        else
                        {
                            <span class="estado tratamiento">@Model.Estado</span>
                        }
                    </div>

                    <div class="description">
                        <span class="label">Descripción</span>
                        <p class="value">@Model.Descripcion</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>