@{
    ViewData["Title"] = "Inicio";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <style>
        /* Fondo gris suave para toda la página */
        body {
            background-color: #f5f5f5;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding: 20px;
        }

        /* Contenedor blanco centrado */
        .container {
            background: white;
            padding: 60px 40px;
            border-radius: 8px;
            max-width: 480px;
            text-align: center;
        }

        /* Título principal */
        h1 {
            font-size: 2em;
            color: #333;
            margin-bottom: 16px;
            font-weight: 500;
        }

        /* Texto de bienvenida */
        p {
            color: #666;
            font-size: 1em;
            margin-bottom: 32px;
        }

        /* Botón para ver animales */
        .btn {
            display: inline-block;
            background-color: #4a5568;
            color: white;
            padding: 12px 32px;
            text-decoration: none;
            border-radius: 4px;
            font-size: 0.95em;
        }

            /* Hover del botón */
            .btn:hover {
                background-color: #2d3748;
            }
    </style>
</head>
<body>
    <div class="container">
        <h1>Refugio de Animales</h1>
        <p>Bienvenido al refugio. Aquí puedes ver los animales disponibles para adopción.</p>
        <!-- Enlace que va a la acción Animales del controlador Refugio -->
        <a asp-controller="Refugio" asp-action="Animales" class="btn">Ver animales</a>
    </div>
</body>
</html>